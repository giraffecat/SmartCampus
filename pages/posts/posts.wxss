/* pages/posts/posts.wxss */

swiper{
  width: 100%;
  height: 360rpx;
}

swiper image{
  width: 100%;
  height: 360rpx;
}

.post-container{
  display:flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: white;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 1-rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600 ;
  margin-top: 10rpx;
  margin-left: 20rpx;
  color: #333333;
}
.post-author{
  margin-left: 30rpx;
  font-size: 26rpx;
  color: rgb(173, 163, 163);

}
.post-date{
  margin-left:20rpx;
  font-size: 26rpx;
  color: rgb(173, 163, 163);
  /* vertical-align: middle; */
}

.post-image{
  width: 100%;
  height: 340rpx;
}

.post-content{
  color: #666666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}